<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appSettings>
        <!-- Security Configuration -->
        <add key="RequireApiKey" value="false" />
        <add key="ApiKeyHeader" value="X-API-Key" />
        <add key="ApiKeys" value="" />
        <add key="LogSecurityEvents" value="true" />
        <add key="AllowedOrigins" value="*" />
        
        <!-- Server Configuration -->
        <add key="DefaultHost" value="localhost" />
        <add key="DefaultPort" value="8080" />
        <add key="MaxConcurrentConnections" value="100" />
        
        <!-- Logging Configuration -->
        <add key="LogRequests" value="true" />
        <add key="LogLevel" value="Info" />
    </appSettings>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
</configuration>