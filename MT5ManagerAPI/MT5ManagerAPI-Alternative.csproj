<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{A1B2C3D4-E5F6-7890-ABCD-EF1234567890}</ProjectGuid>
    <OutputType>Library</OutputType>
    <RootNamespace>MT5ManagerAPI</RootNamespace>
    <AssemblyName>MT5ManagerAPI</AssemblyName>
    <TargetFrameworkVersion>v4.7.2</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <Deterministic>true</Deterministic>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  
  <!-- Conditional references based on available DLLs -->
  <ItemGroup>
    <!-- Try 64-bit DLLs first -->
    <Reference Include="MetaQuotes.MT5CommonAPI" Condition="Exists('$(OutputPath)MetaQuotes.MT5CommonAPI64.dll')">
      <HintPath>$(OutputPath)MetaQuotes.MT5CommonAPI64.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="MetaQuotes.MT5GatewayAPI" Condition="Exists('$(OutputPath)MetaQuotes.MT5GatewayAPI64.dll')">
      <HintPath>$(OutputPath)MetaQuotes.MT5GatewayAPI64.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="MetaQuotes.MT5ManagerAPI" Condition="Exists('$(OutputPath)MetaQuotes.MT5ManagerAPI64.dll')">
      <HintPath>$(OutputPath)MetaQuotes.MT5ManagerAPI64.dll</HintPath>
      <Private>True</Private>
    </Reference>
    
    <!-- Fallback to 32-bit DLLs if 64-bit not available -->
    <Reference Include="MetaQuotes.MT5CommonAPI" Condition="!Exists('$(OutputPath)MetaQuotes.MT5CommonAPI64.dll') AND Exists('$(OutputPath)MetaQuotes.MT5CommonAPI.dll')">
      <HintPath>$(OutputPath)MetaQuotes.MT5CommonAPI.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="MetaQuotes.MT5GatewayAPI" Condition="!Exists('$(OutputPath)MetaQuotes.MT5GatewayAPI64.dll') AND Exists('$(OutputPath)MetaQuotes.MT5GatewayAPI.dll')">
      <HintPath>$(OutputPath)MetaQuotes.MT5GatewayAPI.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="MetaQuotes.MT5ManagerAPI" Condition="!Exists('$(OutputPath)MetaQuotes.MT5ManagerAPI64.dll') AND Exists('$(OutputPath)MetaQuotes.MT5ManagerAPI.dll')">
      <HintPath>$(OutputPath)MetaQuotes.MT5ManagerAPI.dll</HintPath>
      <Private>True</Private>
    </Reference>
    
    <!-- WebAPI DLL (usually not architecture-specific) -->
    <Reference Include="MetaQuotes.MT5WebAPI" Condition="Exists('$(OutputPath)MetaQuotes.MT5WebAPI.dll')">
      <HintPath>$(OutputPath)MetaQuotes.MT5WebAPI.dll</HintPath>
      <Private>True</Private>
    </Reference>
    
    <!-- Standard .NET references -->
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Xml" />
    <Reference Include="Newtonsoft.Json, Version=13.0.0.0, Culture=neutral, PublicKeyToken=30ad4fe6b2a6aeed">
      <HintPath>packages\Newtonsoft.Json.13.0.1\lib\net45\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="MT5Manager.cs" />
    <Compile Include="MT5ApiWrapper.cs" />
    <Compile Include="Models\UserInfo.cs" />
    <Compile Include="Models\AccountInfo.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="packages.config" />
  </ItemGroup>
  
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  
  <!-- Post-build check to ensure MT5 DLLs are available -->
  <Target Name="CheckMT5DLLs" BeforeTargets="Build">
    <Message Text="Checking for MT5 Manager API DLLs..." Importance="high" />
    <Error Text="No MT5 Manager API DLLs found in $(OutputPath). Please run setup-dlls.bat first." 
           Condition="!Exists('$(OutputPath)MetaQuotes.MT5CommonAPI.dll') AND !Exists('$(OutputPath)MetaQuotes.MT5CommonAPI64.dll')" />
    <Message Text="Found 64-bit MT5 DLLs" Importance="high" 
             Condition="Exists('$(OutputPath)MetaQuotes.MT5CommonAPI64.dll')" />
    <Message Text="Found 32-bit MT5 DLLs" Importance="high" 
             Condition="!Exists('$(OutputPath)MetaQuotes.MT5CommonAPI64.dll') AND Exists('$(OutputPath)MetaQuotes.MT5CommonAPI.dll')" />
  </Target>
</Project>